<?xml version="1.0" encoding="utf-8" ?>
<project xmlns="http://maven.apache.org/DECORATION/1.3.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/DECORATION/1.3.0 http://maven.apache.org/xsd/decoration-1.3.0.xsd"
	name="${project.name} ${project.version}">
	<publishDate position="left" format="dd-MMMM-yyyy" />
	<version position="left" />
	<skin>
		<groupId>org.apache.maven.skins</groupId>
		<artifactId>maven-fluido-skin</artifactId>
		<version>1.3.0</version>
	</skin>
	<bannerLeft>
		<name>${project.organization.name}</name>
		<src>images/logo.png</src>
		<href>${project.organization.url}</href>
	</bannerLeft>
	<bannerRight>
		<name>${project.name}</name>
		<href>${project.url}</href>
	</bannerRight>
	<body>
		<head>
			<link rel="shortcut icon" href="favicon.ico" type="image/x-icon" />
			<link rel="icon" href="favicon.ico" type="image/x-icon" />
			<link rel="meta" title="DOAP" href="${project.url}/doap_${project.artifactId}.rdf" type="application/rdf+xml"/>
		</head>
		<links>
			<item name="Jenkins dashboard" href="${project.ciManagement.url}" />
			<item name="Issues dashboard" href="${project.issueManagement.url}" />
		</links>
		<menu name="Informatie">
			<item name="Home" href="/index.html" />
			<item name="Release notes" href="/releasenotes.html" />
			<!-- <item name="Ontwikkel handleiding" href="/ontwikkelhandleiding.html" /> -->
			<item name="PDF documentatie" href="/maven-pdf-plugin.pdf" />
		</menu>
		<menu name="Installatie">
			<item name="Installatie handleiding" href="/installatiehandleiding.html" />
		</menu>
		<menu name="Deployments">
			<item name="CI deployed webapp" href="http://gisdemo.agro.nl/antenneregister/" />
		</menu>
		<menu name="WCAG testing">
			<item name="Webrichtlijnen Quickscan RIA"
				href="http://versie1.webrichtlijnen.nl/toetsen/report/193203/383821/" />
			<item name="Webrichtlijnen Quickscan CORE"
				href="http://versie1.webrichtlijnen.nl/toetsen/report/193203/383822/" />
			<item name="CSS 3 validatie"
				href="http://jigsaw.w3.org/css-validator/validator?uri=http%3A%2F%2Fgisdemo.agro.nl%2Fantenneregister%2F&amp;profile=css21&amp;usermedium=all&amp;warning=1&amp;vextwarning=&amp;lang=nl" />
			<item name="CSS 2.1 validatie"
				href="http://jigsaw.w3.org/css-validator/validator?uri=http%3A%2F%2Fgisdemo.agro.nl%2Fantenneregister%2F&amp;profile=css3&amp;usermedium=all&amp;warning=1&amp;vextwarning=&amp;lang=nl" />
			<item name="HTML validatie"
				href="http://validator.w3.org/check?uri=http%3A%2F%2Fgisdemo.agro.nl%2Fantenneregister%2F" />
		</menu>
		<menu name="Links">
			<item name="Jenkins dashboard" href="${project.ciManagement.url}" />
			<item name="Issues dashboard" href="${project.issueManagement.url}" />
			<item name="Broncode" href="${project.scm.url}" />
		</menu>
		<menu ref="reports" />
	</body>
	<poweredBy>
		<logo name="Jenkins build status" href="http://gisdemo.agro.nl/jenkins/job/antenneregister/" 
			img="http://gisdemo.agro.nl/jenkins/job/antenneregister/badge/icon" />
	</poweredBy>
	<custom>
		<fluidoSkin>
			<topBarEnabled>false</topBarEnabled>
			<sideBarEnabled>true</sideBarEnabled>
			<sourceLineNumbersEnabled>true</sourceLineNumbersEnabled>
			<gitHub>
				<projectId>MinElenI/${project.artifactId}</projectId>
				<ribbonOrientation>right</ribbonOrientation>
				<ribbonColor>red</ribbonColor>
				<profile>pre-release</profile>
			</gitHub>
			<twitter>
				<user>gisdemo_agro_nl</user>
				<showUser>true</showUser>
				<showFollowers>true</showFollowers>
			</twitter>
			<googlePlusOne />
			<ohloh>
				<projectId>641191</projectId>
				<widget>thin_badge</widget>
			</ohloh>
		</fluidoSkin>
	</custom>
</project>
